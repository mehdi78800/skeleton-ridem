{
    "name": "ridem/skeleton",
    "type": "project",
    "license": "MIT",
    "description": "Squelette pour cr√©ation d'une web application avec Ridem",
    "minimum-stability": "dev",
    "autoload" : {
        "psr-4" : {
            "App\\" : "src/"     
        }
    },
    "repositories":[
        {
            "type": "package",
            "package": {
                "name": "mehdi/ridem",
                "version" : "dev",
                "source": {
                    "url": "https://github.com/mehdi78800/ridem.git",
                    "type": "git",
                    "reference": "master"
                },
                "autoload": {
                    "psr-4": { "Ridem\\": ["src/"] }
                }
            }
        }
    ],
    "scripts": {
        "post-create-project-cmd": [
            "auto-scripts": [
            ],
            "post-install-cmd": [
                "@auto-scripts"
            ],
            "post-update-cmd": [
                "@auto-scripts"
            ],
            "php -r \"copy('app/config-example.php', 'app/config.php');\""
        ]
    },
    "require": {
        "mehdi/ridem": "dev",
        "twig/twig": "^3.0",
        "nikic/fast-route": "^1.3" 
    },
    "require-dev": {
        "symfony/var-dumper": "^5.1"
    }
}
